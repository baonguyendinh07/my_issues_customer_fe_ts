{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"standard-with-typescript",
		"plugin:react/recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended",
        "prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"settings": {
		"react": {
		  	"version": "detect"
		}
	},
	"plugins": ["react", "@typescript-eslint", "prettier"],
	"rules": {
		"semi": ["error", "always"],     	// Requires the use of a semicolon after each statement
		"quotes": ["error", "double"],   	// Requires the use of quotes for each string
		"react/jsx-uses-react": "error", 	// Makesure React was import before use JSX
		"react/jsx-uses-vars": "error", 	// Makesure the variables in JSX were define
		"react/prop-types": "off", 			// Disable prop types checking if you have already used TypeScript
		"@typescript-eslint/explicit-function-return-type": "off", // Disable explicit return type requirements for functions
		"@typescript-eslint/explicit-module-boundary-types": "off",// Disable explicit return type requirements for functions
		"arrow-body-style": "off",
		"prefer-arrow-callback": "off",
        "prettier/prettier": "error"
	},
	"root": true
}
