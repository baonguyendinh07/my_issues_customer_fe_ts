{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"settings": {
		"react": {
		  	"version": "detect"
		}
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"semi": ["error", "always"],     	// Requires the use of a semicolon after each statement
		"indent": ["error", 4],
		"quotes": ["error", "double"],   	// Requires the use of quotes for each string
		"space-before-function-paren": ["error", "always"],
		"space-before-blocks": "error",
		"object-curly-spacing": ["error", "always"]
	},
	"root": true
}
